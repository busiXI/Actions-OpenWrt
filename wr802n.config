# Target 配置
CONFIG_TARGET_ar71xx=y
CONFIG_TARGET_ar71xx_generic=y
CONFIG_TARGET_ar71xx_generic_TLWR802DEVICE=y

# 分区配置（适配64MB Flash）
CONFIG_TARGET_ROOTFS_PARTSIZE=61440  # 60MB (0x3C00000)
CONFIG_TARGET_KERNEL_PARTSIZE=16      # 16MB

# 无线热点配置
CONFIG_PACKAGE_kmod-ath9k=y
CONFIG_PACKAGE_kmod-ath9k-common=y
CONFIG_ATH9K_HTC=y

# 网络配置
CONFIG_PACKAGE_kmod-usb-net=y
CONFIG_PACKAGE_kmod-usb-net-rtl8152=y

# Tailscale 配置
CONFIG_PACKAGE_tailscale=y
CONFIG_PACKAGE_tailscaled=y

# 内存优化
CONFIG_PACKAGE_luci=n
CONFIG_IPV6=n
CONFIG_KERNEL_DEBUG_INFO=n

# 设备树覆盖
CONFIG_TARGET_ar71xx_generic_DEVICE_tl-wr802n-v1=y
